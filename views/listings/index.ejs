<% layout('/layout/boilerplate') %>
<link rel="stylesheet" href="../">
<link rel="stylesheet" href="path/to/font-awesome/css/font-awesome.min.css">
<style>


   .filters  {
      display: flex;
      flex-direction: row;
      justify-content:space-between;
      align-items: center;
      
   }
   .nav-links{
      display: flex;
      flex-direction: row;
   }
   .filter{
      text-align: center;
      margin-top: 1rem;
      opacity: 0.7;
   }
   .filter:hover{
      opacity: 1;
      cursor:pointer;
   }
 
   .tax{
      display: none;
   }
   .tax_switch{
      border: 0.1rem solid black;
      border-radius: 0.5rem ;
      padding: 0.5rem;
 
   }
   .nav-toggle {
      display: none;
      background: none;
      border: none;
      z-index: 10;
      font-size: 24px;
      cursor: pointer;
  }
  a{
   text-decoration: none;
   color: black;
  }
  a.active{
   opacity: 1;
  }
  @media (max-width: 1000px) {
      .nav-links {
          display: none;
          flex-direction: column;
          width: 100%;
          text-align: center;
          background-color: antiquewhite;
      }
      .nav-links.active {
          display: flex;
      }
      .nav-toggle {
          display: block;
      }
  }
</style>
  
 <div class=" filters" id="filters">
   <button class="nav-toggle" id="nav-toggle" aria-label="Toggle navigation menu">â˜°</button>
