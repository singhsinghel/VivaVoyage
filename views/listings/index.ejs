   <div class="tax_switch">
      <div class="form-check-reverse form-switch">
         <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckDefault">
         <label class="form-check-label" for="flexSwitchCheckDefault">Display total after taxes</label>
       </div>
   </div>
 </div>
<ul>
   <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 mt-3">
    <% for(let listing of listings){ %>
        <div class="card listing-card col" style="width: 20rem;">
           <a href="/listings/<%= listing._id %>"> <img src="<%= listing.image.url %>" class="card-img-top" alt="listing-img"></a>
            <div class="card-body">
              <p class="card-text"> <a href="/listings/<%= listing._id %>"><b><%= listing.title %></b></a>,<%= listing.country %>
                 <br>
                 <%= listing.location %>
                 <br>
                 &#8377;  <%= listing.price %>/night    &nbsp; &nbsp; <i class="tax">+18%gst</i>       
            </p>
            </div> 
          </div>
          <br>
          <% } %>
   </div>

   <script>
      let toggle=document.getElementById('flexSwitchCheckDefault');
      toggle.addEventListener('click',()=>{
         let gst=document.getElementsByClassName('tax');
         console.log(gst)
         for(let i=0;i<gst.length;i++){
         if (gst[i].style.display != 'inline' ) {
            gst[i].style.display = 'inline';
        } else {
            gst[i].style.display = 'none';
        }
      }
   });
   const filters = document.getElementsByClassName('filter');
   </script>
   
</body>