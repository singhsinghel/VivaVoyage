<% layout('/layout/boilerplate') %>
<body>
    <div class="container mt-4">
        <h3 class="mb-4 text-center">Create a New Listing</h3>
        <form method="post" action="/listings" novalidate class="needs-validation" enctype="multipart/form-data">
            
            <!-- Title -->
            <div class="row mb-3">
                <div class="col-12 col-md-8">
                    <label for="title" class="form-label">Title</label>
                    <input required class="form-control" name="listing[title]" placeholder="Enter title" type="text">
                    <div class="valid-feedback"> Available</div>
                    <div class="invalid-feedback"> Title is required</div>
                </div>
            </div>
            
            <!-- Description -->
            <div class="row mb-3">
                <div class="col-12 col-md-8">
                    <label for="description" class="form-label">Description</label>
                    <input required class="form-control" type="text" name="listing[description]" placeholder="Enter description">
                    <div class="valid-feedback"> Available</div>
                    <div class="invalid-feedback"> Description is required</div>
                </div>
            </div>

            <!-- Category -->
            <div class="row mb-3">
                <div class="col-12 col-md-8">
                    <label for="category" class="form-label">Category</label>
                    <select required class="form-control" id="dropdown" name="listing[category]">
                        <option value="">Select category</option>
                        <option value="Trending">Trending</option>
                        <option value="Rooms">Rooms</option>
                        <option value="Iconic-cities">Iconic cities</option>
                        <option value="Nature">Nature</option>
                        <option value="Castles">Castles</option>
                        <option value="Amazing">Amazing pools</option>
                        <option value="Camping">Camping</option>
                        <option value="Farms">Farms</option>
                        <option value="Arctic">Arctic</option>
                    </select>
                    <div class="valid-feedback"> Available</div>
                    <div class="invalid-feedback"> Category is required</div>
                </div>
            </div>

            <!-- Image Upload -->
            <div class="row mb-3">
                <div class="col-12 col-md-8">
                    <label for="image" class="form-label">Upload Image</label>
                    <input required class="form-control" type="file" name="listing[image]">
                    <div class="valid-feedback"> Available</div>
                </div>
            </div>

            <div class="row">
                <!-- Price -->
                <div class="col-12 col-sm-6 col-md-4 mb-3">
                    <label for="price" class="form-label">Price</label>
                    <input required class="form-control" type="number" name="listing[price]" placeholder="Enter price">
                    <div class="valid-feedback"> Available</div>
                    <div class="invalid-feedback"> Price is required</div>
                </div>

                <!-- Country -->
                <div class="col-12 col-sm-6 col-md-4 mb-3">
                    <label for="country" class="form-label">Country</label>
                    <input required class="form-control" type="text" name="listing[country]" placeholder="Enter country">
                    <div class="valid-feedback"> Available</div>
                    <div class="invalid-feedback"> Country is required</div>
                </div>
            </div>

            <!-- Location -->
            <div class="row mb-3">
                <div class="col-12 col-md-8">
                    <label for="location" class="form-label">Location</label>
                    <input required class="form-control" type="text" name="listing[location]" placeholder="Enter location">
                    <div class="valid-feedback"> Available</div>
                    <div class="invalid-feedback"> Location is required</div>
                </div>
            </div>

            <!-- Submit Button -->
            <div class="row">
                <div class="col-12 col-md-4">
                    <button class="btn btn-dark w-100" type="submit">Submit</button>
                </div>
            </div>

        </form>
    </div>
</body>

