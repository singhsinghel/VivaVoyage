<style>
.search-form{
  position: relative; /* To contain the absolute positioning of the button */
  width: 40rem;

 }

 .btn-search {
    background-color: #fe424d;
    color: #fff;
    display: flex;
    gap: 0.2rem;
    border-radius: 3rem;
    position: absolute;
    right: 0; 
    top: 50%;
    transform: translateY(-50%);
    padding: 0.5rem 1rem;
    border: none;
  }
  .search {
    border: none;
    width: 100% !important;
    padding: 0.5rem 1rem !important;
    background-color: rgb(255, 242, 240);
    font-size: 0.9rem;
    border-radius: 3rem;
  
  }
  .heading{
   font-size: 1rem;
  }
  .btn-search:hover {
    background-color: #fe424d;
    color: #fff;
  }

  .btn-search i {
    margin-top: 0.3rem;
  }
  .search:focus {
    outline: none;
    transform: scale(1.01);
    transition: cubic-bezier(0.215, 0.610, 0.355, 1);
    box-shadow: 1px 2px 10px rgb(241, 183, 176);
  }
  @media (max-width:900px) {
    .search-form{
      width: 17rem;
    }
  
  }

  @media (max-width:700px) {
    .search-text{
      display: none !important;

    }
    .btn-search{
      background-color: rgb(255, 242, 240);
      color: #fe424d !important;
    }
    .search-form{
      position: relative; /* To contain the absolute positioning of the button */
      width: 15rem;
     }
  
  }

</style>
<body>
<nav class="navbar navbar-expand-md py-2 bg-body-light border-bottom sticky-top ">
<div class="container-fluid">
  <a class="navbar-brand" href="/listings"><i class='bx bxs-compass d-flex align-items-center gap-2'><span class="fw-bold heading m-auto">VivaVyouge</span></i> </a>
  
  <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>
  
 
  <div class="collapse navbar-collapse bg-white p-2" id="navbarNavAltMarkup">

    <form class="ms-auto"  role="search" method="get" action="/listings/search">
    <div class='navbar-nav search-form  '>
        <input name="search" class="search form-control1 form-control me-2" type="search" placeholder="Search destinations" aria-label="Search">
        <button class="btn btn-search" type="submit"><i class='bx bx-search'></i> <span class="search-text">Search</span> </button>
      </div>
    </form>

    <div class="navbar-nav ms-auto">
      <a class="nav-link text-nowrap" href="/listings/new">Airbnb your home</a>
      <% if (!currUser) { %>
        <a class="nav-link" href="/user/signup"><b>Signup</b></a>
        <a class="nav-link" href="/user/login"><b>Login</b></a>
      <% } %>
      <% if (currUser) { %>
        <a class="nav-link" href="/user/logout">Logout</a>
      <% } %>
    </div>
  </div>
</div>
</nav>
